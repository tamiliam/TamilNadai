{
  "version": "1.0",
  "description": "TamilNadai error taxonomy — maps grammar rules to 12 macro categories",
  "source": "Based on தமிழ் நடைக் கையேடு (TVA, bookid=169) and LanguageTool grammar.xml",

  "categories": {
    "sandhi_doubling": {
      "id": 1,
      "name_en": "Sandhi doubling (vallinam)",
      "name_ta": "ஒற்று மிகுதல்",
      "description": "Hard consonant (க,ச,த,ப) should be doubled at the start of the second word but is missing",
      "book_rules": "54-69, 78-93",
      "error_type": "missing_vallinam_doubling"
    },
    "sandhi_no_doubling": {
      "id": 2,
      "name_en": "No sandhi doubling",
      "name_ta": "ஒற்று மிகாமை",
      "description": "Hard consonant should NOT be doubled but incorrectly is",
      "book_rules": "94-128",
      "error_type": "unnecessary_vallinam_doubling"
    },
    "word_joining": {
      "id": 3,
      "name_en": "Word joining",
      "name_ta": "சேர்த்து எழுதுதல்",
      "description": "Words should be written together but are incorrectly separated",
      "book_rules": "CAT1 join rules, CAT2 join rules, Ch 6",
      "error_type": "incorrect_separation"
    },
    "word_separation": {
      "id": 4,
      "name_en": "Word separation",
      "name_ta": "பிரித்து எழுதுதல்",
      "description": "Words should be written separately but are incorrectly joined",
      "book_rules": "CAT1 separate rules, CAT2 separate rules, Ch 6",
      "error_type": "incorrect_joining"
    },
    "noun_postposition": {
      "id": 5,
      "name_en": "Noun + postposition",
      "name_ta": "பெயர் + இடைச்சொல்",
      "description": "Rules governing when noun + postposition should be joined or separated based on case markers",
      "book_rules": "Ch 6 (6-03 and related)",
      "error_type": "noun_postposition_spacing"
    },
    "verb_auxiliary": {
      "id": 6,
      "name_en": "Verb + auxiliary",
      "name_ta": "வினை + துணைவினை",
      "description": "Auxiliary verbs must be joined to the main verb",
      "book_rules": "5-01, 5-02",
      "error_type": "verb_auxiliary_separation"
    },
    "number_agreement": {
      "id": 7,
      "name_en": "Number agreement",
      "name_ta": "எண் ஒப்புமை",
      "description": "Quantifier-noun number agreement (e.g., ஒவ்வொரு + singular)",
      "book_rules": "5-03, 5-04, 5-05",
      "error_type": "number_agreement_error"
    },
    "article_usage": {
      "id": 8,
      "name_en": "Article usage (ஒரு/ஓர்)",
      "name_ta": "ஒரு/ஓர் பயன்பாடு",
      "description": "Use ஓர் before vowel-initial words, ஒரு before consonant-initial words",
      "book_rules": "53",
      "error_type": "article_form_error"
    },
    "case_marker_sandhi": {
      "id": 9,
      "name_en": "Case marker sandhi",
      "name_ta": "வேற்றுமை உருபுப் புணர்ச்சி",
      "description": "Consonant doubling after case markers (accusative ஐ, dative கு)",
      "book_rules": "70-77",
      "error_type": "case_marker_doubling"
    },
    "classical_sandhi": {
      "id": 10,
      "name_en": "Classical sandhi",
      "name_ta": "மரபுப் புணர்ச்சி",
      "description": "Morphophonemic sound changes in word formation (plurals, glides, etc.)",
      "book_rules": "1-52",
      "error_type": "classical_sandhi_error"
    },
    "specific_words": {
      "id": 11,
      "name_en": "Specific word conventions",
      "name_ta": "தனிச்சொல் வழக்கு",
      "description": "Context-dependent joining/separation for specific words (Ch 5-6 miscellaneous)",
      "book_rules": "Ch 5-6 misc",
      "error_type": "specific_word_convention"
    },
    "correct_sentence": {
      "id": 12,
      "name_en": "Correct sentence",
      "name_ta": "பிழையற்ற வாக்கியம்",
      "description": "Well-formed Tamil sentence with no error — used for false-positive testing",
      "book_rules": null,
      "error_type": null
    }
  },

